<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
           				http://www.springframework.org/schema/context 
           				http://www.springframework.org/schema/context/spring-context.xsd
           				http://www.springframework.org/schema/mvc
        				http://www.springframework.org/schema/mvc/spring-mvc.xsd">


	<bean id="propertyConfigurer" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
	    <property name="nullValue" value='""' />
	    <property name="ignoreResourceNotFound" value="true" />
	    <property name="locations">
	        <list>
	            <value>classpath:/mango_defaults.properties</value>
	            <value>${mango.config.file:${mango.config.file.default}}</value>
	        </list>
    	</property>
	</bean>


	<bean class="io.pelle.mango.server.base.util.ConfigurationLogger" />

 	<mvc:annotation-driven />

	<import resource="classpath:/MangoBaseApplicationContext-gen.xml" />

	<import resource="classpath:/MangoSpringServices-gen.xml" />

	<bean class="io.pelle.mango.server.validator.NaturalKeyValidator" />

	<bean class="io.pelle.mango.server.validator.LengthValidator" />
    
    <bean name="xmlVOImporter" class="io.pelle.mango.server.xml.XmlVOImporter" />
    
    <bean name="xmlVOExporter" class="io.pelle.mango.server.xml.XmlVOExporter" />
    
   	<bean class="io.pelle.mango.server.xml.XmlVOMapper" />
    
    <bean class="io.pelle.mango.server.MangoApplicationContext"/>

    <bean id="metricRegistry" class="com.codahale.metrics.MetricRegistry"/>
    
    <!--  jackson mapper configuration -->
   	<bean id="objectMapper" class="com.fasterxml.jackson.databind.ObjectMapper" />

	<bean
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="objectMapper" />
		<property name="targetMethod" value="configure" />
		<property name="arguments">
			<list>
				<value type="com.fasterxml.jackson.databind.DeserializationFeature">FAIL_ON_UNKNOWN_PROPERTIES</value>
				<value>false</value>
			</list>
		</property>
	</bean>
    
</beans>
